            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/table_padding"
                    android:text="@string/epworth_situation1" />

                <RadioGroup android:orientation="horizontal">

                    <RadioButton
